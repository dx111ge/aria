# Aria Docker Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=development
DEBUG=true

# ============================================================================
# Port Configuration (avoids conflicts with agui)
# ============================================================================
FRONTEND_PORT=3001
BACKEND_PORT=8001
# Postgres and Redis are internal only - no host port exposure needed

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_DB=aria
POSTGRES_USER=aria
POSTGRES_PASSWORD=aria_dev_password

# ============================================================================
# Cache (Redis)
# ============================================================================
# Redis uses internal Docker network - no configuration needed

# ============================================================================
# Security (change these in production!)
# ============================================================================
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURE_COOKIES=false

# ============================================================================
# Frontend URLs
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3001
